{% extends 'base.html.twig' %}
{% block title %}Inscription | Etufit{% endblock %}
{% block stylesheets %}
    <!-- CDN for google recaptcha -->
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <style>
        .main {
            background-color: white;
        }

        .card-panel{
            padding: 20px;
        }

        .ub-back-opacity  {
            position: relative;
            background-image: url("{{ asset('images/register.jpg') }}");
            background-size: cover;
            background-repeat: no-repeat;
            width: 100%;
            height: 300px;
        }

        .title_welcome {
            font-size: 2.8rem;
        }

        .title_account {
            font-size: 2rem
        }

        .showcase{
            margin-top: 30px;
            margin-bottom: 100px;
        }

        .section-register{
            color: black;
        }

        .sticky_footer {
            bottom: -100px;
        }

        @media screen and (max-width: 500px){
            .main{
                min-height: 100vh;
            }
        }
    </style>
{% endblock %}

{# Content register #}
{% block body %}
<!-- Showcase -->
    <div class=" container ">
        <div class="row row-1">
            <div class="col s12 m10 offset-m1 center showcase">
                <h1 class=" white-text ub-text-shadow title_welcome">Bienvenue sur Étufit</h1>
                <h2 class="white-text ub-text-shadow  title_account">Créer un compte</h2>
            </div>
        </div>
    </div>

<!-- section register -->
    <div class="container">
        <div class="row row-2">
            <div class="col s12 m5">
                <h1>Logiciel Etufit</h1>
                <p>Bienvenue sur Etufit, inscrivez vous pour pouvoir réserver vos séances dans votre salle sport, gérer votre agenda en quelques clics</p>
            </div>
            <div class="col s12 m7">
                <div class="card-panel grey lighten-4 grey-text text-darken-4 z-depth-0">
                    <div id="view_register"></div>
                    <a href="{{ path('index') }}" id="link_back">Retour à l'accueil</a>
                    <form id="formRegister" action="{{ path('registerValidate') }}" method="POST">
                        <!-- <div class="input-field">
                            <select id="role">
                                <option disabled selected>Vous êtes?</option>
                                <option value="student">Etudiant</option>
                                <option value="teacher">Enseignant</option>
                            </select>
                            <label for="role">Statut</label>
                        </div>
                        <br> -->
                        <div class="input-field">
                            <input type="text" id="nameRegister" name="nameRegister" placeholder="Nom" data-length="60">
                            <label for="nameRegister">Nom</label>
                        </div>
                        <div class="input-field">
                            <input type="text" id="studentId" name="studentId" placeholder="EtuCode" data-length="11">
                            <label for="studentId">n° etudiant</label>
                        </div>
                        <div class="input-field">
                            <input type="email" id="emailRegister" name="emailRegister" placeholder="Email" data-length="320">
                            <label for="emailRegister">email</label>
                        </div>
                        <div class="input-field">
                            <input type="password" id="passwordRegister" name="passwordRegister" placeholder="Mot de passe" data-length="250">
                            <label for="passwordRegister">Mot de passe</label>
                        </div>
                        <div class="input-field">
                            <input type="password" id="confirmRegister" name="confirmRegister" placeholder="Confirmer">
                            <label for="confirmRegister">Confirmer mot de passe</label>
                        </div>
                        <p id="recaptcha">{{ Recaptcha.displayRecaptcha()|raw }}</p>
                        <div class="input-field">
                            <input type="submit" class="btn btn-large ub-orange btn-extend" value="Inscription">
                        </div>
                        <div id="access_login">
                            <p class="margin center medium-small sign-up">Tu as déjà un compte ?
                            <a class="modal-trigger" href="#login-modal">Connexion</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/script-user-Register.js') }}"></script>
{% endblock %}